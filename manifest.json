{
  "manifest_version": 2,
  "name": "Tabs Aside!",
  "version": "1.2",
  "description": "Put all your tabs aside (-> bookmarks)",
  "author": "Tim Weissenfels",

  "icons": {
    "48": "icons/arrow-left-48.png"
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/arrow-left-32.png",
    "default_title": "Tabs aside!",
    "default_popup": "popup/menu.html",
    "browser_style": true
  },

  "sidebar_action": {
    "default_title": "Tabs you've set aside",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/tabs.png"
  },

  "background": {
    "scripts": ["background.js"]
  }

}